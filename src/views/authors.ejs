<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/"><h3 style="color: rgb(221, 32, 105);">E-BookReader</h3></a>
              
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                     <%for(var i=0;i<nav.length;i++){%>
                                <li class="nav-item">
                                    <a class="nav-link" href="<%=nav[i].link%>" style="color:rgb(221, 32, 105) ;"><%=nav[i].title%></a>
                                </li>
                                
                                  <%}%></ul>
                              </div>
                               </nav>
    </header>
    <div class="container" style="text-align: center;">
        <div class="row">
            <%for(i=0;i<author.length;i++){%>
            <div class="column">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="<%=author[i].image%>" height="300" width="300">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=author[i].author%><br>
                        </h5>
                        <p class="card-text">
                            <%=author[i].detail%>

                        </p>
                        <a href="/authors/<%=author[i]._id%>"> Read more</a>
                    </div>
                </div>
            </div>
            <%}%>
</div>
</div><br>
